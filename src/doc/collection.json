{
    "openapi": "3.0.0",
    "info": {
        "title": "Ayapone Backend APIs",
        "description": "Powering the next generation cryptocurrency e-Commerce platform.",
        "version": "1.0",
        "x-logo": {
            "url": "https://github.com/Ayagigs/Ayapone-Backend/blob/main/assets/imgs/ayapone.png?raw=true",
            "backgroundColor": "#FFFFFF",
            "altText": "AYAPONE"
        },
        "contact": {
            "url": "https://github.com/Ayagigs/Ayapone-Backend/issues"
        },
        "license": {
            "name": "GNU GENERAL PUBLIC LICENSE",
            "url": "https://github.com/Ayagigs/Ayapone-Backend/blob/main/LICENSE"
        }
    },
    "servers": [
        {
            "url": "http://{{baseurl}}"
        }
    ],
    "tags": [
        {
            "name": "Auth"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "example": {
                                    "email": "hinata_hyuhau@yopmail.com",
                                    "password": "123456",
                                    "remember_me": true
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Buyer - Sign up",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "example": {
                                    "last_name": "Hyuga",
                                    "first_name": "Hinata",
                                    "email": "hinata_hyuga@yopmail.com",
                                    "password": "123456",
                                    "user_type": "buyer"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        }
    }
}